<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_layout_background"
    android:id="@+id/smartphone_usage_input_layout"
    android:padding="4dp"
    android:layout_marginTop="16dp">

    <!-- TextView for the Question -->
    <TextView
        android:id="@+id/usageQuestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/usage_question_text"
        android:textSize="16sp"
        android:textColor="@color/blue_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/usageInputField"
        android:layout_marginBottom="8dp"/>

    <!-- EditText for User Input -->
    <EditText
        android:id="@+id/usageInputField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Input usage here as minutes"
        android:textColor="@color/blue_600"
        android:backgroundTint="@color/blue_500"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submitUsageButton"
        android:layout_marginBottom="8dp"/>

    <!-- Button to Submit Usage -->
    <Button
        android:id="@+id/submitUsageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_500"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
