<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top banner -->
    <ImageView
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/nightsky"
        android:layout_alignParentTop="true" />

    <!-- TextView for more information -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_corners"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/infoText"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="100dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_bedtime_info"
        android:textSize="20sp"
        android:padding="4dp"
        android:textColor="@color/black" />
    </LinearLayout>

    <!-- GridLayout for response buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:id="@+id/buttonLayout"
        android:layout_below="@id/infoText">

        <!-- First row with 4 buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/contextHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="At home"
                android:textSize="12sp"
                android:backgroundTint="@color/blue_800"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

            <Button
                android:id="@+id/contextWorkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="At work"
                android:textSize="12sp"
                android:backgroundTint="@color/blue_700"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

            <Button
                android:id="@+id/contextCommuteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="12sp"
                android:text="Commuting"
                android:backgroundTint="@color/blue_600"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

            <Button
                android:id="@+id/contextOtherButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="12sp"
                android:text="Other"
                android:backgroundTint="@color/blue_500"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

        </LinearLayout>

        <!-- Second row with 3 buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/productiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Productive"
                android:textSize="12sp"
                android:backgroundTint="@color/deep_purple_700"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

            <Button
                android:id="@+id/leisureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Leisure"
                android:textSize="12sp"
                android:backgroundTint="@color/deep_purple_500"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

            <Button
                android:id="@+id/otherButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:text="Other"
                android:backgroundTint="@color/deep_purple_300"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you receive a notification that prompted you to use your phone?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            />

        <!-- Third row with 2 buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selfInitiatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:text="Self-Initiated"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

            <Button
                android:id="@+id/notificationInitiatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Notification-Initiated"
                android:backgroundTint="@color/teal_500"
                android:textColor="@android:color/white"
                android:background="@drawable/dialog_corners" />

        </LinearLayout>

    </LinearLayout>

    <!-- Text field for prompting user -->
    <EditText
        android:id="@+id/extraInfoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLayout"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Could you tell us more? (optional)"
        android:backgroundTint="@color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/extraInfoEditText"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:padding="4dp"
        android:textColor="@color/black"
        android:text="Please select one option from each row, then click submit to continue phone use"
        />

    <!-- Close button -->
    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="Close"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/white"
        android:background="@drawable/dialog_corners" />

    <!-- Submit button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_A700"
        android:background="@drawable/dialog_corners" />

</RelativeLayout>
