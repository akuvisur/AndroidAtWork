<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/blue_gray_50">

    <TextView
        android:id="@+id/completion_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for participating in this study!"
        android:textSize="24sp"
        android:textColor="@color/blue_gray_900"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/completion_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The study is now complete. If you participated from Prolific, here is the completion code:"
        android:textSize="18sp"
        android:textColor="@color/blue_gray_700"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/completion_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROLIFIC123456"
        android:textSize="20sp"
        android:textColor="@color/blue_gray_800"
        android:textStyle="bold"/>

</LinearLayout>
