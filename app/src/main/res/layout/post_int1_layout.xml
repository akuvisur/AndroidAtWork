<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/blue_50">

    <TextView
        android:id="@+id/intervention_over_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERVENTION #1 PERIOD IS NOW OVER"
        android:textSize="24sp"
        android:textColor="@color/blue_700"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/intervention_info_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="During Intervention #2, you will no longer receive pop-ups when you exceed your smartphone usage limit goal."
        android:textSize="18sp"
        android:textColor="@color/blue_600"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/intervention_duration_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This phase lasts 14 days."
        android:textSize="16sp"
        android:textColor="@color/blue_600"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/start_intervention_2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START INTERVENTION #2"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_500"
        android:padding="16dp"/>

</LinearLayout>
