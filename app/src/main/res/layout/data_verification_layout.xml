<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_layout_background"
    android:id="@+id/data_verification_layout"
    android:padding="8dp">

    <!-- TextView for Usage Information -->
    <TextView
        android:id="@+id/usageInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You used your smartphone for xH yM yesterday, does this information seem correct?"
        android:textSize="12sp"
        android:textColor="@color/blue_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.50" />

    <!-- Button for Yes -->
    <Button
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_500"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/usageInfoText"
        app:layout_constraintEnd_toStartOf="@id/noButton"
        android:layout_marginEnd="4dp" />

    <!-- Button for No -->
    <Button
        android:id="@+id/noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_500"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
