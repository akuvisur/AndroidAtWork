<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/deep_purple_50">

    <TextView
        android:id="@+id/data_collection_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA COLLECTION PERIOD IS NOW OVER"
        android:textSize="24sp"
        android:textColor="@color/deep_purple_900"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@drawable/linear_layout_background"
        android:layout_marginTop="4dp"
        android:padding="4dp">
    <TextView
        android:id="@+id/survey_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1: Please complete the exit survey. It has questions about the intervention mechanisms."
        android:textSize="18sp"
        android:textColor="@color/deep_purple_700" />

    <Button
        android:id="@+id/postStudyExitSurveyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="EXIT SURVEY"
        android:textSize="16sp"
        android:textColor="@color/deep_purple_50"
        android:backgroundTint="@color/deep_purple_500"
        android:layout_marginBottom="0dp"
        />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@drawable/linear_layout_background"
        android:layout_marginTop="4dp"
        android:padding="4dp">
    <TextView
        android:id="@+id/spai_questionnaire_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2: Please also again fill the Smartphone Addiction Inventory (SPAI) and Smartphone Addiction Survey (SAS-SV) again. It is done to underestand if the intervention influenced your reliance on your smartphone."
        android:textSize="16sp"
        android:textColor="@color/deep_purple_600"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/postStudySpaiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smartphone Addiction Inventory (SPAI)"
        android:backgroundTint="@color/deep_purple_500"
        android:textColor="@color/deep_purple_50"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/postStudySASSVButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smartphone Addiction Survey (SAS-SV)"
        android:backgroundTint="@color/deep_purple_500"
        android:textColor="@color/deep_purple_50"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/completeStudyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPLETE STUDY"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/deep_purple_500"
        android:layout_marginTop="8dp"
        android:padding="16dp"/>

</LinearLayout>
